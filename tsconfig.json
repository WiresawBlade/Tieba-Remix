{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "jsx": "preserve",
        "jsxFactory": "h",
        "jsxFragmentFactory": "Fragment",
        "jsxImportSource": "vue",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        "skipLibCheck": true,
        "alwaysStrict": true,
        "types": [
            "vite/client",
            "element-plus/global"
        ],
        "noEmit": true,
        "baseUrl": "src",
        "paths": {
            "@/*": [
                "./*"
            ]
        }
    },
    "include": [
        "./src"
    ],
}
